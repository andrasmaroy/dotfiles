[core]
	excludesfile = ~/.gitignore_global
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[user]
	name = user
	email = user@example.com
[alias]
	amend = commit --amend
	ci = commit --verbose
	co = checkout
	dh1 = diff HEAD~1
	ds = diff --stat
	ff = pull --ff-only
	st = status
	# Show the HEAD commit and its contents
	hp = "!bash -c '. ~/.githelpers && show_git_head $*' $*"
	# Show commits both local and remote on the current branch and 3 commits before them
	l = "!bash -c '. ~/.githelpers && pretty_git_log HEAD @{u} --not $(git merge-base HEAD @{u})~3 $*' $*"
	# Show all commits
	la = "!bash -c '. ~/.githelpers && pretty_git_log --all $*' $*"
	ss = status -s
	d = difftool
	dg = difftool -g
	ctags = !.git/hooks/ctags
[push]
	default = simple
[diff]
	tool = vimdiff
	guitool = p4mergetool
[difftool]
	prompt = false
[difftool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $LOCAL $REMOTE
[merge]
	tool = p4mergetool
[mergetool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
	trustExitCode = true
[mergetool]
	keepBackup = false
[init]
	templatedir = ~/.git_template
